#!/usr/bin/env sh

# Enable scripting addition (needed if SIP is disabled)
yabai -m signal --add event=window_created action="yabai -m window --focus recent"

# General settings
yabai -m config layout bsp
yabai -m config window_gap 8
yabai -m config top_padding 8
yabai -m config bottom_padding 8
yabai -m config left_padding 8
yabai -m config right_padding 8

# Window borders
yabai -m config window_border on
yabai -m config window_border_width 2
yabai -m config active_window_border_color 0xff5c7e81
yabai -m config normal_window_border_color 0xff444444

